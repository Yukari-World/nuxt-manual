{
	"compilerOptions": {
		"target": "ES2018",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": [
			"ESNext",
			"ESNext.AsyncIterable",
			"DOM"
		],
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"],
			"@/*": ["./*"],
			"~~/*": ["./*"],
			"@@/*": ["./*"]
		},
		"types": [
			"@types/jest",
			"@types/node",
			"@nuxt/types",
			"nuxt-i18n",
			"vuetify"
		]
	},
	"exclude": ["node_modules", ".nuxt", "dist"]
}
